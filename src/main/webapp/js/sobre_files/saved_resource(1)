/* Animate Tags */
.wp-community-tagger .community-tagger-tags-suggested span, .wp-community-tagger .community-tagger-tags-suggested span:hover { 
	-webkit-transition: all 0.3s ease-out;
	-moz-transition: all 0.3s ease-out;
	-o-transition: all 0.3s ease-out;
	-ms-transition: all 0.3s ease-out;
	transition: all 0.3s ease-out;
}
@-webkit-keyframes tagpulse {
    0% { -webkit-transform: scale(1); opacity: 1; }
    50% { -webkit-transform: scale(.9); opacity: .9; }
    100% { -webkit-transform: scale(1); opacity: 1; }
}
@-moz-keyframes tagpulse {
    0% { -moz-transform: scale(1); opacity: 1; }
    50% { -moz-transform: scale(.9); opacity: .9; }
    100% { -moz-transform: scale(1); opacity: 1; }
}
@-o-keyframes tagpulse {
    0% { -o-transform: scale(1); opacity: 1; }
    50% { -o-transform: scale(.9); opacity: .9; }
    100% { -o-transform: scale(1); opacity: 1; }
}
@-ms-keyframes tagpulse {
    0% { -ms-transform: scale(1); opacity: 1; }
    50% { -ms-transform: scale(.9); opacity: .9; }
    100% { -ms-transform: scale(1); opacity: 1; }
}
@keyframes tagpulse {
    0% { transform: scale(1); opacity: 1; }
    50% { transform: scale(.9); opacity: .9; }
    100% { transform: scale(1); opacity: 1; }
}
